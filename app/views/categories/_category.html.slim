section
	header
		h2
			- if user_signed_in?
				=> link_to glyph(:trash), category, method: :delete, data: {action: "destroy"}
			= link_to category.title, "/produtos/#{category.id}"
		
	- for subcategory in category.subcategories
		ul
			li
				- if user_signed_in?
					=> link_to glyph(:trash), [category, subcategory], method: :delete, data: {action: "destroy"}
				= link_to subcategory.title, "/produtos/#{category.id}/#{subcategory.id}"
		
	- if user_signed_in?
		= simple_form_for [category, Subcategory.new] do |f|
			= f.input :title, placeholder: "Nova Sub-categoria", label: false